{
  "name": "restaurant-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node ./dist/src/infra/http/server.js",
    "dev": "tsnd --transpile-only --exit-child -r tsconfig-paths/register ./src/infra/http/server.ts",
    "test": "dotenv -e .env.test npx prisma migrate deploy && dotenv -e .env.test jest --passWithNoTests",
    "test:watch": "dotenv -e .env.test npx prisma migrate deploy && dotenv -e .env.test jest --passWithNoTests --watch",
    "prepare": "husky install",
    "commit": "cz",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "prettier --check src/**",
    "lint:fix": "eslint src/** --fix && prettier --write src/**",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prisma": "^4.6.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/pg": "^8.6.5",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "uuid": "^9.0.0",
    "validator": "^13.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prisma": {
    "schema": "./src/infra/prisma/schema.prisma"
  },
  "lint-staged": {
    "src/**": [
      "npx eslint 'src/**' --fix",
      "npx prettier --check 'src/**'"
    ]
  }
}
